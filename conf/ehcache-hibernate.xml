<ehcache updateCheck="false" name="hibernateCache">

	<diskStore path="java.io.tmpdir/ehcache/crm/hibernate" />

	<!-- DefaultCache setting. -->
	<defaultCache 
		maxElementsInMemory="10000" 
		eternal="false" 
		timeToIdleSeconds="300" 
		timeToLiveSeconds="600"
		overflowToDisk="true" />
	
